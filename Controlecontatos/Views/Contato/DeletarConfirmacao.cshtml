@model ContatoModel

@{
    ViewData["Title"] = "Confirmação de deletar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Name)</h3>
</div>
<a class="btn btn-primary d-block" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
<a class="btn btn-secondary btn-danger d-block" asp-controller="Contato" asp-action="Remover" asp-route-id="@Model.Id" role="button"> Confirmar</a>

