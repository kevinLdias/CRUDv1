@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar contato</h1>
</div>
<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control"  placeholder="Seu nome">
    </div>
    <br/>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="text" class="form-control" placeholder="seuemail@gmail.com">
    </div>
    <br/>
    <div class="form-group">
        <label for="numero">Celular</label>
        <input type="text" class="form-control" placeholder="Ex: 99 99999-9999">
    </div>
    <br/>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role= "button">Voltar</a>
    <button class="btn btn-primary">Alterar</button>
</form>